{
    "name": "@gridspace/net-level",
    "version": "0.2.2",
    "description": "shared, authenticated network access to leveldb",
    "author": "Stewart Allen <sa@grid.space>",
    "license": "MIT",
    "private": false,
    "main": "lib/index.js",
    "np": {
        "contents": "."
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "doc:publish": "cd documentation && GIT_USER=CourtHive USE_SSH=true yarn deploy",
        "release": "npx np --no-tests",
        "test": "jest --detectOpenHandles --forceExit ",
        "coverage": "jest --coverage --detectOpenHandles --forceExit "
    },
    "bin": {
        "net-level-cli": "./lib/cli.js",
        "net-level-clone": "./lib/clone.js",
        "net-level-server": "./lib/server.js"
    },
    "engines": {
        "node": ">=20.10.0 < 21"
    },
    "files": [
        "index.js",
        "lib/cli.js",
        "lib/util.js",
        "lib/clone.js",
        "lib/client.js",
        "lib/server.js",
        "package.json"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gridspace/net-level.git"
    },
    "keywords": [
        "network",
        "leveldb",
        "storage"
    ],
    "dependencies": {
        "dayjs": "1.11.10",
        "dotenv": "16.4.2",
        "express": "4.18.2",
        "jest": "^29.7.0",
        "level": "8.0.1",
        "minimist": "1.2.8",
        "serve-static": "1.15.0",
        "ts-jest": "^29.1.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jest": "27.6.3",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.33.2",
        "np": "9.2.0",
        "prettier": "3.2.5",
        "prettier-eslint": "16.3.0"
    },
    "jest": {
        "globalSetup": "./tests/config/setup.ts",
        "globalTeardown": "./tests/config/teardown.js",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/documentation/",
            "/data/"
        ],
        "testTimeout": 5000,
        "moduleDirectories": [
            "node_modules",
            "lib"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "modulePaths": [
            "<rootDir>"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.test.(t|j)s$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
